<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2d4d"
    tools:context=".RigesterActivity">

     <RelativeLayout
         android:background="#2b2d5d"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="10dp"
         android:paddingBottom="20dp">



    <LinearLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp">

        <!-- Title  -->
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Create Account"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />
        <!-- name  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/name"
            android:text="Name"
            android:layout_marginTop="10dp"

            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"

            android:textStyle="bold" />

        <EditText
            android:maxLength="20"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_boy1"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:hint="abc"
            android:textColor="#fff"
            android:textColorHint="#9eee" />
        <!--  class -->
        <TextView
            android:labelFor="@+id/std"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="Class"
            android:textStyle="bold"/>
        <Spinner
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dropdownclass"
            android:background="@drawable/edittext_round"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown"/>
       <!-- <EditText
            android:drawableLeft="@drawable/ic_class1"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/std"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:hint="TYIT"
            android:singleLine="true"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:textColorHint="#9eee"  -->

        <TextView
            android:visibility="invisible"
            android:id="@+id/setstd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--  gr no -->
        <TextView
            android:labelFor="@+id/grno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="Gr No."
            android:textStyle="bold"/>
        <EditText
            android:drawableLeft="@drawable/ic_grno"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/grno"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:hint="00000"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="7"
            android:textColorHint="#9eee"
            />
        <!--  roll no -->
        <TextView
            android:labelFor="@+id/rollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="Roll No."
            android:textStyle="bold"/>
        <EditText
            android:drawableLeft="@drawable/ic_rollno"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rollno"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:hint="00"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:inputType="number"
            android:textColorHint="#9eee"
            android:maxLength="4"
            android:singleLine="true"
            />
        <!-- phone  -->
        <TextView
            android:labelFor="@+id/phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="phone no."
            android:textStyle="bold"/>
        <EditText
            android:drawableLeft="@drawable/ic_phone1"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/phoneno"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:hint="987654321"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:maxLength="10"
            android:inputType="number"
            android:textColorHint="#9eee"
            android:singleLine="true"
            />
        <!-- dob  -->
        <TextView

            android:labelFor="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="date of birth"
            android:textStyle="bold"/>
        <EditText
            android:drawableLeft="@drawable/ic_dob1"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dob"
            android:textColor="#fff"
            android:inputType="date"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:hint="dd/mm/yyyy"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:textColorHint="#9eee"
            android:singleLine="true"
            />
        <!--  email -->
        <TextView
            android:labelFor="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textStyle="bold"/>

        <EditText
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="10dp"
            android:id="@+id/email"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:hint="abc@gmail.com"
            android:textColorHint="#9eee"
            android:singleLine="true"/>
        <!--  password
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint" />
        </com.google.android.material.textfield.TextInputLayout>  -->

        <TextView
            android:layout_marginTop="10dp"
            android:labelFor="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="Password"
            android:textStyle="bold"/>

        <EditText
            android:drawableLeft="@drawable/ic_password1"
            android:drawablePadding="10dp"
            android:id="@+id/password"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"
            android:textColorHint="#9eee"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"/>
        <CheckBox

            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:layout_gravity="right"
            android:textColor="#fff" />


        <!--cnf  password -->


        <TextView
            android:layout_marginTop="10dp"
            android:labelFor="@+id/cnfpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#AEFFFFFF"
            android:text="Confirm Password"
            android:textStyle="bold"/>

        <EditText
            android:drawableLeft="@drawable/ic_password1"
            android:drawablePadding="10dp"
            android:id="@+id/cnfpassword"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"
            android:textColorHint="#9eee"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/edittext_round"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"/>



        <!--  register -->
       <!-- <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password1"
                android:hint="Confirm Password"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#efe"
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>-->

        <Button
            android:id="@+id/register"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:background="@drawable/button_bg_round"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:elevation="25dp"
            android:text="Register" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ball"/>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </LinearLayout>

     </RelativeLayout>

</ScrollView>