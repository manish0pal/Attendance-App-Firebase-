<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="@color/logincolor"
    tools:context=".GenmeetingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Meeting"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/form"
        android:layout_below="@+id/toolbar"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:labelFor="@+id/dataandtime"
            android:text="Time and Date"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    <TextView
        android:textColor="@color/black"
        android:textSize="15dp"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dataandtime"
        android:background="@drawable/edittext_round"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:labelFor="@+id/venue"
            android:text="Enter Venue"
            android:textAllCaps="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edittext_round"
        android:id="@+id/venue"
        android:paddingLeft="10dp"
        android:paddingVertical="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true" />

        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="AGENDA"
            android:fontFamily="sans-serif-condensed-medium"
            android:labelFor="@+id/agenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:minHeight="60dp"
            android:maxHeight="100dp"
            android:layout_marginTop="10dp"
            android:id="@+id/agenda"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittext_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
        android:layout_marginLeft="20dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:text="Create Image"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"/>

    </LinearLayout>


    <ImageView
        android:layout_centerInParent="true"

        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
     />
    <TextView
        android:id="@+id/countertext"
        android:textSize="30dp"
        android:textColor="#fff"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>